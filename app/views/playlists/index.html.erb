<div class="row">
  <div class="large-12 columns">
    <div class="row" id="index-welcome">
      <h1>Welcome to Spotlist</h1>
    </div>

    <div class="row">
      <% @playlists.each do |playlist| %>
      <div class="large-3 small-6 columns">
        <iframe src="https://embed.spotify.com/?uri=<%= playlist.url %>" height="500" frameborder="0" allowtransparency="true"></iframe>
        <div class="index-title-user-box">
          <span class="index-playlist-title"><%= link_to playlist.title, playlist_path(playlist) %></span><br>
          <span class="index-playlist-user"><%= link_to playlist.user.email, user_path(playlist.user) %></span>
        </div>
      </div>
      <% end %>
    </div>
    <div class="row" id="index-buffer-row">

    </div>
  </div>
  <%= paginate @playlists %>
</div>

