<div>
  <h1><%= @user.email %></h2><br>
      <img src="<%= @user.profile_photo %>" width="200" />

  <h2> Playlists </h2>
    <% @user.playlists.each do |playlist| %>
    <%= link_to playlist.title, playlist_path(playlist) %><br>
  <% end %>
</div>

<h2>Recent Reviews</h2>
  <% @user.recent_reviews.each do |review| %>
    Playlist Name: <%= link_to review.playlist.title, playlist_path(review.playlist)%><br>
    Rating: <%= review.rating %><br>
    Description: <%= review.description %><br><br>
  <% end %>
