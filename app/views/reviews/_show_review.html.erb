<% @reviews.each do |review| %>
<div>
  --
</div>
<div>Username: <%= review.user.email %> </div>
<div>Rating: <%= review.rating %></div>
<div>Review: <%= review.description %></div>

<div><%= link_to "Upvote", upvote_review_path(review), method: :post %></div>
<div><%= link_to "Downvote", downvote_review_path(review), method: :post %></div>
<div> Score: <%= review.total_score %>
  <% if review.user == current_user %>
    <div> <%= link_to "Edit", edit_playlist_review_path(@playlist, review)  %> </div>
    <div> <%= link_to "Delete Review", playlist_review_path(@playlist, review), method: :delete %> </div>
  <% elsif current_user == nil %>
  <% elsif current_user.admin? %>
    <p><%= link_to "Delete Review", admin_review_path(review), method: :delete %></p>
   <% end %>
<% end %><br>

  <%= paginate @reviews %>
