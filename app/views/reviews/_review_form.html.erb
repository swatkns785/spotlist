
<%= form_for [@playlist, @review] do |f| %>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.select :rating, options_for_select(0..5) %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Review", method: :post %>
  </div>
<% end %>
